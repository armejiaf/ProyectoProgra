@model Clasificados.Models.IndexModel
          
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@Scripts.Render("~/bundles/bootstrap")
<div class="jumbotron" style="align-self: center;background-color: white;text-align: center">
    <h1 style="font-family: Courier">Clasificados</h1>
</div>
@Html.Partial("_Notifications")
<div class="container">
    <div class="row clearfix">
        <div class="col-md-4 column">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Clasificados Recientes</h3>
                </div>
                <div class="panel-body">
                    @foreach (var clasificados in Model.ClasificadosRecientes)
                    {
                        <div class="list-group">
                            <a href="@Url.Action("DetalleCategory", "Options", new { @id = @clasificados.Id })" class="list-group-item active">
                                @clasificados.Titulo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4 column">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Clasificados Recomendados</h3>
                </div>
                <div class="panel-body">
                    @foreach (var clasificados in Model.ClasificadosRecomendados)
                    {
                        <div class="list-group">
                            <a href="@Url.Action("DetalleCategory", "Options", new { @id = @clasificados.Id })" class="list-group-item active">
                                @clasificados.Titulo : @clasificados.Categoria
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4 column">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">Clasificados Destacados</h3>
                </div>
                <div class="panel-body">
                    @foreach (var clasificados in Model.ClasificadosDestacados)
                    {
                        <div class="list-group">
                            <a href="@Url.Action("DetalleCategory", "Options", new { @id = @clasificados.Id })" class="list-group-item active">
                                @clasificados.Titulo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
